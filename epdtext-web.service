[Unit]
Description=epdtext Flask app
After=local-fs.target network.target epdtext.service
Requires=epdtext.service

[Service]
Type=simple
User=pi
Group=pi
Environment=PATH=/usr/local/bin:/usr/bin:/bin
WorkingDirectory=/home/pi/epdtext-web
ExecStart=/usr/local/bin/gunicorn --bind 0.0.0.0:5000 --workers 2 --timeout 60 app:app
Restart=on-failure
RestartSec=5

[Install]
WantedBy=default.target

